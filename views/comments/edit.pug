extends ../layout

block content
  h1 Edit comment
  form(method="POST")
    .row
      .col
        label(for="gameId")="Game id"
        input#gameId(type="number" name="gameId" class="form-control" value=commentFound.gameId  )
    .row
      .col
        label(for="name")="name"
        input#commentName(type="text" name="name" class="form-control" value=commentFound.name)
    .row
      .col
        label(for="email")="email"
        input#commentEmail(type="email" name="email" class="form-control" value=commentFound.email)
    .row
      .col
        label(for="body")="Body"
        textarea#commentBody(name="body" class="form-control")= commentFound.body
    .row
      .col  
        button(role="submit" class="btn btn-success")="Edit comment"